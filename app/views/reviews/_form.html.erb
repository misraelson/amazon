<%= @review.errors.full_messages.join(", ") %>
  <%= form_for [@product, review], remote: true do |f| %>
    <div>
      <%= f.label :body %> <br>
      <%= f.text_area :body %> <br>
    </div>
    <div>
      <%= f.label :stars %>
      <%= f.text_field :stars %>
    </div>
     <br>
    <%= f.submit data: {disable_with: "submitting..."} %>
<% end %>
